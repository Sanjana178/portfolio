<div class="container">
  <div class="row d-flex justify-content-center">
    <div class="col-4">
      <%= link_to content_path(@content) do %>
      <h2><%= @content.title %></h2>
      <p><%= @content.description %></p>
      <%= cl_image_tag @content.image, height: 300, width: 400, crop: :fill %>
      <% end %>
    </div>
  </div>
</div>

